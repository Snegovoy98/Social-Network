{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block stylesheets %}
    <link href=".{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/form-validation.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container col-md-12  col-lg-5 ">
        <div class="py-5 text-center">
            <h2>Регистрация</h2>
        </div>

{{ form_start(form) }}
        <div class="col-md-5 mb-3 col-lg-5  justify-content-md-center">
            {{ form_row(form.lastName, {label_attr: {for: 'lastName'} }) }}
        </div>
        <div class="col-md-5 mb-3 col-lg-5">
            {{ form_row(form.firstName, {label_attr: {for: 'firstName'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.fatherName, {label_attr: {for: 'fatherName'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.login, {label_attr: {for: 'login'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.password, {label_attr: {for: 'password'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.birthdate, {label_attr: {for: 'birthdate'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.country, {label_attr: {for: 'country'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.states, {label_attr: {for: 'states'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.gender, {label_attr: {for: 'gender'} }) }}
        </div>
        <div class="col-md-5 mb-3">
            {{ form_row(form.submit)}}
        </div>
{{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
